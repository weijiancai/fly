            <category name="表单类型" sortNum="10">
                <code name="查询表单" value="0" sortNum="10"/>
                <code name="编辑表单" value="1" sortNum="20"/>
            </category>
        </categories>
    </dict>

    <classes>
        <class name="ClassDefine">
            <queryForm>
                <field name="SuperClass" display="false"/>
                <field name="ClassDesc" display="false"/>
                <field name="SortNum" display="false"/>
                <field name="Name" queryMode="like"/>
                <field name="Cname" queryMode="like"/>
            </queryForm>
            <editForm/>
            <table>
                <field name="Id" display="false"/>
            </table>
        </class>
    </classes>
</system>
